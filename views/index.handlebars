{{!-- page title --}}
<h1>Eat Da Burger</h1>
{{!-- what kind of burger would you like made --}}
<form class="order-area" action="/burgers/insert" method="post">
	<div id="image">
		<img src="/images/burger.png" alt="burger" class="image" />
		<p>What kind of burger would you like to devour?</p>
		<input type="text" name="burger_name" row>
		<br><br>
		<input type="submit" value="Get To Cookin" class="btn btn-primary"></input>
		</from>



		<div id="not-devoured">
			{{#each burger_data}}
			{{#unless this.devoured}}
			<div id="list">
				<span class="burgers-id">{{this.id}}</span>
				<span class="burgers-id">{{this.burger_name}}</span>
				<form class="devour-form button-size"></form>
				{{!-- <p>What kind of burger would you like to devour?</p> --}}
				<br>
				<button type="button" class="btn btn-primary">Devour Da Burger!</button>
</form>
</div>
{{/unless}}
{{/each}}
</div>

<div id="devoured">
	{{#each burger_data }}
	{{#if this.devoured}}
	<div class="list-item">
		<span class="burgers-id">{{this.id}}</span>
		<span class="burgers-name-text">{{this.burger_name}}</span>
		<br>
	</div>
	{{/if}}
	{{/each}}
</div>