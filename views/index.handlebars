{{!-- page title --}}
<h1>Eat Da Burger</h1>
{{!-- what kind of burger would you like made --}}
<form class="order-area">
	<div id="image">
		<img src="/images/burger.png" alt="burger" class="image" />
		<p>What kind of burger would you like to devour?</p>
		<input type="text" row>
		<br><br>
		<button type="button" class="btn btn-primary">Get To Cookin'</button>
		</from>



		<div id="not-devoured">
			{{#each burger_data}}
			{{#unless this.devoured}}
			<div id="list">
			<span class="burger-id">{{this.id}}</span>
			<span class="burger-id">{{this.burger.name}}</span>
			<form class="devour-form button-size"></form>
				{{!-- <p>What kind of burger would you like to devour?</p> --}}
				<br>
				<button type="button" class="btn btn-primary">Devour Da Burger</button>
			</form>
			</div>
			{{/unless}}
			{{/each}}
</div>

<div id="devoured">
	{{#each burger_data }}
	{{#if this.devoured}}
	<div class="list-item">
		<span class="burger-id">{{this.id}}</span>
		<span class="burger-name-text">{{this.burger_name}}</span>
		<br>
	</div>
	{{/if}}
	{{/each}}
</div>